                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bottom" />

        </FrameLayout>
    </FrameLayout>

    <!-- Fourth Square -->
    <FrameLayout
        android:id="@+id/squareFourFrame"
        android:layout_width="265px"
        android:layout_height="265px"
        android:background="#000000"
        android:padding="5px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".40">

        <FrameLayout
            android:id="@+id/squareFour"
            android:layout_width="255px"
            android:layout_height="255px"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
